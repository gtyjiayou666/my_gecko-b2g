EXPORTS.mozilla.dom += [
    "B2G.h",
]

UNIFIED_SOURCES += [
    "B2G.cpp",
]

DIRS += [
    "activities",
    "alarm",
    "camera",
    "devicestorage",
    "externalapi",
    "flashlightmanager",
    "flipmanager",
    "downloads",
    "inputmethod",
    "keyboardappproxy",
    "keyboardeventgenerator",
    "messages",
    "networkstats",
    "permissions",
    "powersupply",
    "tethering",
    "usb",
    "virtualcursor",
]

# MOZ_B2G_RIL
if CONFIG["MOZ_B2G_RIL"]:
    DIRS += [
        "cellbroadcast",
        "datacall",
        "icc",
        "mobileconnection",
        "mobilemessage",
        "pco",
        "telephony",
        "subsidylock",
        "videocallprovider",
        "voicemail",
        "wappush",
    ]
# MOZ_B2G_RIL_END

if CONFIG["MOZ_B2G_BT"]:
    DIRS += ["bluetooth"]

if CONFIG["ENABLE_TOUCHPAL"]:
    DIRS += ["imeconnect/touchpal"]

if CONFIG["MOZ_B2G_FM"]:
    DIRS += ["fmradio"]

if not CONFIG["DISABLE_WIFI"]:
    DIRS += [
        "wifi",
    ]

if CONFIG["MOZ_WIDGET_TOOLKIT"] == "gonk":
    DIRS += [
        "speakermanager",
        "time",
    ]

if CONFIG["HAS_KOOST_MODULES"]:
    DIRS += [
        "kaiauth",
    ]

include("/ipc/chromium/chromium-config.mozbuild")

FINAL_LIBRARY = "xul"
